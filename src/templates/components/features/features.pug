  var features = [
    {
      img: 'design.svg',
      text: 'Дизайн проект бесплатно.<br>Допуск СРО',
    },
    {
      img: 'estimate.svg',
      text: 'Честные адекватные цены.<br>Смета окончательна',
    },
    {
      img: 'catalog.svg',
      text: 'Проекты, согласование,<br>комплектация - всё в одном месте.',
    },
    {
      img: 'truck.svg',
      text: 'Выезд менеджеров и<br>дизайнеров к клиентам',
    },
    {
      img: 'eye-with-pencils.svg',
      text: 'Демонстрация объектов<br>на разных этапах',
